#include <iostream>

using namespace std;

int main()
{   int p,m;
   cin>> p>>m;
  // cout<<p<<m<<endl;
  int count=0;
  int v=0;
  int z= 240-m;
  int i;
  for( i = 1 ; i<=p ; i++){
      v= (i*5)+v;
      if(v>z)
      {break;}
      count++;
  }
   cout<<count;
   return 0;
}
